# .clang-tidy
Checks: >
  -*,                    # disable all default checks
  readability-identifier-naming
HeaderFilterRegex: '.*'  # run on all files

CheckOptions:
  # Types: classes, structs, enums, typedefs → UpperCamelCase
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.StructCase
    value: CamelCase
  - key: readability-identifier-naming.EnumCase
    value: CamelCase

  # Functions (and methods) → lowerCamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack

  # Variables and member properties → snake_case
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.MemberCase
    value: lower_case

  # Private members: snake_case + trailing underscore
  - key: readability-identifier-naming.PrivateMemberCase
    value: lower_case
  - key: readability-identifier-naming.PrivateMemberSuffix
    value: _

  # Parameters → snake_case
  - key: readability-identifier-naming.ParameterCase
    value: lower_case

  # Constants → UPPER_CASE
  - key: readability-identifier-naming.ConstantCase
    value: UPPER_CASE
